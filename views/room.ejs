<!DOCTYPE html>

  <head>
    <title><%= title %></title>
    <link rel="icon" href="/images/logo.png" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="room-body">
    <nav>
      <a href="localhost:3000">
        <img
          class="logo"
          src="/images/logo-brand.png"
          width="240px"
          alt="ludo-logo"
        />
      </a>
    </nav>
    <section class="room-main">
      <div class="room-wrapper">
        <div class="room-game-grid">
          <div class="room-chat">
            <aside class="chat">
              <ul id="chat-log"></ul>
              <form id="chat-form" action="#null">
                <input
                  id="message"
                  disabled="true"
                  name="message"
                  type="text"
                  autocomplete="off"
                />
                <button
                  id="send-button"
                  disabled="true"
                  name="send-button"
                  type="submit"
                >
                  Send
                </button>
              </form>
            </aside>
          </div>
        

          <div class="room-game-wrapper">
            <div class="container card">
                   <!-- First row -->
                  <div class="container-row1 clearfix">
                      <div class="row1-col1 green">
                          <div class="row1-col1-child clearfix white">
                              <div class="green" id="greenblock">
                                <div class="pawns" id="greenpawn1"     style="background-color:#84c21f"></div>
                              </div>
                              <div class="green" id="greenblock">
                                <div class="pawns" id="greenpawn2"     style="background-color:#84c21f"></div>
                              </div>
                              <div class="green" id="greenblock">
                                <div class="pawns" id="greenpawn3"     style="background-color:#84c21f"></div>
                              </div>
                              <div class="green" id="greenblock">
                                <div class="pawns" id="greenpawn4"      style="background-color:#84c21f"></div>
                              </div>
                          </div>
                      </div>
                      <div class="row1-col2 clearfix">
                          <div id="g11"></div>
                          <div id="g12"></div>
                          <div id="g13"></div>
                          <div id="g10"></div>
                          <div class="yellow" id="Y5"></div>
                          <div class="yellow" id="y1"></div>
                          <div id="g9"></div>
                          <div class="yellow" id="Y4"></div>
                          <div id="y2"></div>
                          <div id="g8"></div>
                          <div class="yellow" id="Y3"></div>
                          <div id="y3"></div>
                          <div id="g7"></div>
                          <div class="yellow" id="Y2"></div>
                          <div id="y4"></div>
                          <div id="g6"></div>
                          <div class="yellow" id="Y1"></div>
                          <div id="y5"></div>
                      </div>
                      <div class="row1-col3 yellow">
                          <div class="row1-col3-child clearfix white">
                              <div class="yellow" id="yellowblock">
                                <div class="pawns" id="yellowpawn1"   style="background-color:#f6c700"></div>
                              </div>
                              <div class="yellow" id="yellowblock">
                                <div class="pawns" id="yellowpawn2"   style="background-color:#f6c700"></div>
                              </div>
                              <div class="yellow" id="yellowblock">
                                <div class="pawns" id="yellowpawn3"   style="background-color:#f6c700"></div>
                              </div>
                              <div class="yellow" id="yellowblock">
                                <div class="pawns" id="yellowpawn4"   style="background-color:#f6c700"></div>
                              </div>
                          </div>
                      </div>
                  </div>
          
                  <!-- Second row -->
                  <div class="container-row2 clearfix">
                      <div class="row2-col1 clearfix">
                          <div id="r13"></div>
                          <div class="green" id="g1"></div>
                          <div id="g2"></div>
                          <div id="g3"></div>
                          <div id="g4"></div>
                          <div id="g5"></div>
                          <div id="r12"></div>
                          <div class="green" id="G5"></div>
                          <div class="green" id="G4"></div>
                          <div class="green" id="G3"></div>
                          <div class="green" id="G2"></div>
                          <div class="green" id="G1"></div>
                          <div id="r11"></div>
                          <div id="r10"></div>
                          <div id="r9"></div>
                          <div id="r8"></div>
                          <div id="r7"></div>
                          <div id="r6"></div>
                      </div>
                      <div class="row2-col2">
                          <!-- add triangular effect using html and css -->
                          <div class="contain-triangles">
                              <div class="triangle-right"></div>
                              <div class="triangle-up"></div>
                              <div class="triangle-left"></div>
                              <div class="triangle-down"></div>
                          </div>
                      </div>
                      <div class="row2-col3 clearfix">
                          <div id="y6"></div>
                          <div id="y7"></div>
                          <div id="y8"></div>
                          <div id="y9"></div>
                          <div id="y10"></div>
                          <div id="y11"></div>
                          <div class="blue" id="B1"></div>
                          <div class="blue" id="B2"></div>
                          <div class="blue" id="B3"></div>
                          <div class="blue" id="B4"></div>
                          <div class="blue" id="B5"></div>
                          <div id="y12"></div>
                          <div id="b5"></div>
                          <div id="b4"></div>
                          <div id="b3"></div>
                          <div id="b2"></div>
                          <div class="blue" id="b1"></div>
                          <div id="y13"></div>
                      </div>
                  </div>
          
                  <!-- Third row -->
                  <div class="container-row3 clearfix">
                      <div class="row3-col1 red">
                          <div class="row3-col1-child clearfix white">
                              <div class="red" id="redblock">
                                <div class="pawns" id="redpawn1"      style="background-color:#dc2418"></div>
                              </div>
                              <div class="red" id="redblock">
                                <div class="pawns" id="redpawn2"     style="background-color:#dc2418"></div>
                              </div>
                              <div class="red" id="redblock">
                                <div class="pawns" id="redpawn3"     style="background-color:#dc2418"></div>
                              </div>
                              <div class="red" id="redblock">
                                <div class="pawns" id="redpawn4"      style="background-color:#dc2418"></div>
                              </div>
                          </div>
                      </div>
                      <div class="row3-col2 clearfix">
                          <div id="r5"></div>
                          <div class="red" id="R1"></div>
                          <div id="b6"></div>
                          <div id="r4"></div>
                          <div class="red" id="R2"></div>
                          <div id="b7"></div>
                          <div id="r3"></div>
                          <div class="red" id="R3"></div>
                          <div id="b8"></div>
                          <div id="r2"></div>
                          <div class="red" id="R4"></div>
                          <div id="b9"></div>
                          <div class="red" id="r1"></div>
                          <div class="red" id="R5"></div>
                          <div id="b10"></div>
                          <div id="b13"></div>
                          <div id="b12"></div>
                          <div id="b11"></div>
                      </div>
                      <div class="row3-col3 blue">
                          <div class="row3-col3-child clearfix white">
                              <div class="blue" id="blueblock">
                                <div class="pawns" id="bluepawn1"       style="background-color:#0092dc"></div>
                              </div>
                              <div class="blue" id="blueblock">
                                <div class="pawns" id="bluepawn2"     style="background-color:#0092dc"></div>
                              </div>
                              <div class="blue" id="blueblock">
                                <div class="pawns" id="bluepawn3"     style="background-color:#0092dc"></div>
                              </div>
                              <div class="blue" id="blueblock">
                                <div class="pawns" id="bluepawn4"    style="background-color:#0092dc"></div>
                              </div>
                          </div>
                      </div>
                  </div>
          </div>
        </div>
          <div class="room-link">
            <form id="join-form">
              <input
                id="join-name"
                placeholder="Enter Name"
                name="join-name"
                type="text"
                autocomplete="off"
              />
              <button id="join-button">Join Call</button>
            </form>

            <div class="dice" id="dice-roll"  style="background-image:url(images/dice.gif);background-size:contain; width:150px;height:150px">
            </div>

            <div class="text">
              <p><h4 id="uselesstext1">It`s</h4><h4 id="player" style="float:left; color:red">red</h4><h4 id="uselesstext2">'s turn</h4></p>
              <br>
              <p id="badtext" style="float:left;"></p>
            </div>

          </div>
          <div class="room-video-grid" id="room-grid">
            <div class="room-video">
              <div class="player-name" id="p1">Player 1</div>
              <video
                class="room-video-stream"
                id="self-video"
                width="100%"
                height="100%"
                autoplay
                playsinline
              ></video>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script>
      window.NAMESPACE = `<%- namespace %>`;
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
    <script src="javascripts/room.js"></script>
  </body>
</html>
